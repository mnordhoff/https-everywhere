<ruleset name="Zimbra (false MCB)" platform="mixedcontent">

	<target host="zimbra.com" />
	<target host="*.zimbra.com" />
	<target host="zimbrablog.com" />
	<target host="www.zimbrablog.com" />


	<!--securecookie host="^\.zimbra\.com$" name="^(_mkto_trk|optimizely\w+|__utm\w)$" /-->
	<securecookie host="^(?:.*\.)?zimbra\.com$" name=".+" />

	<test url="http://blog.zimbra.com/" />
	<test url="http://files.zimbra.com/" />
	<test url="http://files.zimbra.com/docs/config-guide/index.html" />
	<test url="http://files2.zimbra.com/" />
	<test url="http://files2.zimbra.com/downloads/zdesktop/1833/zdesktop_1_0_4_build_1833_linux_i686.sh" />
	<test url="http://gallery.zimbra.com/" />
	<test url="http://help.zimbra.com/" />
	<test url="http://www.zimbra.com/" />


	<rule from="^http://(?:www\.)?zimbrablog\.com/"
		to="https://blog.zimbra.com/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
